<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProfileIconStyle">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/bg_square</item>
        <item name="android:tint">@color/white</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ProfileImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="SmallTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/gray4</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>